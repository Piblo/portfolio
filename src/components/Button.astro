---
import { type HTMLTag } from "astro/types";

interface Props {
  as?: HTMLTag;
}

const Element = Astro.props.as ?? "button";
---

<Element
  class="px-4 py-3 bg-white rounded text-black inline-flex items-center justify-center gap-2 cursor-pointer focus:outline hover:outline outline-gray-400 outline-offset-4 outline-2"
  {...Astro.props}
>
  <slot />
</Element>
